<h1>Reviews#new</h1>

<%= simple_form_for [@cocktail, @review], defaults: { input_html: { class: 'col-sm-6' } } do |f| %>
  <%= f.input :detail %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.button :submit, 'Submit new Review', class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to #{@cocktail.name} page", cocktail_path(@cocktail), class: 'btn btn-primary my-2' %>
