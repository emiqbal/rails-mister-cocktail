<h1 class="text-center mt-2">List of All Cocktails</h1>

<div class="row">
  <%  @cocktails.each do |cocktail|%>
    <div class="col-sm-6 col-md-4 d-flex justify-content-center">
      <div class="card my-2 bg-light text-dark" style="width: 20rem;">
        <%= cl_image_tag cocktail.photo.key, height: 300, crop: :fill, class: "card-img-top" %>
        <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        </div>
        <div class="card-footer">
        <%= link_to "More info on #{cocktail.name}", cocktail_path(cocktail) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
